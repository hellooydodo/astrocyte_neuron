#Morris-Lecar model
v'=0.05*(-gl*(v-vl)-gk*n*(v-vk)-gca*minf(v)*(v-vca)+I)
n'=lamda*(ninf(v)-n)/tau(v)

par I=0
par gl=2,gk=8,gca=4.4
par vl=-60,vk=-84,vca=120
par lamda=0.04,v1=-1.2,v2=18,v3=2,v4=30
minf(v)=0.5*(1+tanh((v-v1)/v2))
ninf(v)=0.5*(1+tanh((v-v3)/v4))
tau(v)=1/cosh((v-v3)/(2*v4))


@xlo=0,xhi=100,ylo=-100,yhi=100,total=100
@maxstor=10000